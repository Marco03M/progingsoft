class Reparto:
    def __init__(self, nome, num_dipendenti):
        self.nome = nome
        self.num_dipendenti = int(num_dipendenti)
        #self.budget = int(budget)

    def aggiungi_dipendenti(self, nuovo_numero):
        self.num_dipendenti = int(nuovo_numero)

nome_reparto=input("inserisci nome reparto:")
num_dipendenti=int(input("inserisci numero iniziale di dipendenti:"))
nuovo_numero=int(input("numero dipendenti ingaggiati:"))

num_dipendenti=num_dipendenti+nuovo_numero

reparto = Reparto(nome_reparto, num_dipendenti)

print("Nome del reparto:", reparto.nome)
print("Numero di dipendenti:", reparto.num_dipendenti)
