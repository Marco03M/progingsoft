class Reparto:
       def __init__(self, nome, numero_dipendenti, budget):
         self.nome = nome
         self.numero_dipendenti = numero_dipendenti
         self.budget = budget

       def aggiungi_dipendente(self, nuovo_numero):
         self.numero_dipendenti = nuovo_numero

       def diminuisci_budget(self, budget_tot):
           self.budget=budget_tot

reparto = Reparto("Vendite", 10, 50)
print("Numero di dipendenti e budget disponibile prima dell'aggiornamento:", reparto.numero_dipendenti, reparto.budget)

nuovo_numero_dipendenti = 50
budget_rimasto=30
reparto.aggiungi_dipendente(nuovo_numero_dipendenti)
reparto.diminuisci_budget(budget_rimasto)

print("Numero di dipendenti dopo l'aggiornamento e budget rimasto:", reparto.numero_dipendenti, reparto.budget)
